---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentPath = Astro.url.pathname;

import ThemeToggle from "@/components/shared/ThemeToggle.tsx";
import LangSelect from "./LangSelect.astro";
import MobileMenuToggle from "./MobileMenuToggle";
import BasicSkeleton from "./ui/BasicSkeleton.astro";
import { GiHamburgerMenu } from "react-icons/gi";
---

<nav
    class="fixed top-0 w-full z-20 h-16 backdrop-blur-[10px] shadow-sm bg-stone-200/70 dark:bg-slate-900/70 border-b border-stone-400/40 dark:border-slate-700/40"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <!-- Logo -->
            <a
                href={`/${lang}`}
                class="text-xl font-semibold text-gray-900 dark:text-gray-100 tracking-tight hover:opacity-80 transition-opacity"
            >
                Alandev.site
            </a>

            <!-- Desktop Menu -->
            <div
                class="hidden md:flex items-center gap-6 text-gray-800 dark:text-gray-200 text-base"
            >
                <!-- Home -->
                <a
                    href={`/${lang}`}
                    class={`px-3 py-2 font-medium transition-colors duration-200 border-b-2 ${
                        currentPath === `/${lang}/portfolio`
                            ? "border-blue-600 text-blue-600 dark:border-blue-300 dark:text-blue-300"
                            : "border-transparent text-gray-800 hover:text-gray-900 dark:text-gray-200 dark:hover:text-gray-100"
                    }`}
                >
                    {t("nav.home")}
                </a>

                <!-- Blog -->
                <a
                    href={`/${lang}/blog`}
                    class={`px-3 py-2 font-medium transition-colors duration-200 border-b-2 ${
                        currentPath.includes("/blog")
                            ? "border-blue-600 text-blue-600 dark:border-blue-300 dark:text-blue-300"
                            : "border-transparent text-gray-800 hover:text-gray-900 dark:text-gray-200 dark:hover:text-gray-100"
                    }`}
                >
                    {t("nav.blog")}
                </a>

                <LangSelect />
                <div class="w-10 h-10 flex items-center justify-center">
                    <ThemeToggle client:only="react" />
                </div>
            </div>

            <!-- Mobile Hamburger -->
            <button
                id="menu-toggle"
                class="md:hidden text-gray-800 dark:text-gray-200 hover:text-gray-900 dark:hover:text-gray-100"
            >
                <GiHamburgerMenu width={30} height={30} />
            </button>
        </div>
    </div>

    <!-- Mobile Sidebar -->
    <div
        id="mobile-menu"
        class="fixed top-0 left-0 w-64 h-screen px-5 bg-stone-200 dark:bg-slate-800 shadow-lg z-50
      transform -translate-x-full transition-transform duration-300 md:hidden"
    >
        <div class="flex justify-between items-center my-6">
            <span
                class="text-xl font-semibold text-gray-900 dark:text-gray-100"
            >
                Menu
            </span>
            <button id="menu-close" class="text-gray-700 dark:text-gray-200"
                >âœ•</button
            >
        </div>

        <div class="flex flex-col gap-4 text-gray-800 dark:text-gray-200">
            <a href={`/${lang}/portfolio`} class="hover:text-blue-500"
                >{t("nav.home")}</a
            >
            <a href={`/${lang}/blog`} class="hover:text-blue-500"
                >{t("nav.blog")}</a
            >
            <LangSelect />
            <div class="w-10 h-10 flex items-center justify-center">
                <ThemeToggle client:only="react" />
            </div>
        </div>
    </div>

    <MobileMenuToggle client:only="react" />
</nav>
