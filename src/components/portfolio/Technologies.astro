---
import { FaArrowDown } from "react-icons/fa";
import BasicSkeleton from "../shared/ui/BasicSkeleton.astro";
import Button from "../shared/ui/Button.astro";
import TechnologiesSwiper from "./TechnologiesSwiper";

import { getLangFromUrl, useTranslations } from "@/i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<section id="technologies" class="min-h-[calc(100vh-4rem)] w-full flex flex-col justify-center items-center">
    <div class="relative w-full max-w-6xl">
        <h2 class="font-saira text-center text-lg text-slate-700 dark:text-gray-400 mb-2 tracking-widest uppercase">
            {t('technologies.title')}
        </h2>
        <h3 class="font-saira text-center text-2xl md:text-3xl font-semibold mb-10 tracking-wide text-slate-700 dark:text-white normal-case">
            {t('technologies.subtitle')}
        </h3>
        <TechnologiesSwiper
            client:only="react"
            >
            <div slot="fallback" class="py-14 flex flex-col items-center">
                <div
                    class="grid grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-2 w-full max-w-6xl mx-auto"
                >
                    {
                        Array.from({ length: 20 }).map(() => (
                            <BasicSkeleton
                                width="w-full"
                                height="h-[120px]"
                                rounded="rounded-md"
                            />
                        ))
                    }
                </div>
            </div>
        </TechnologiesSwiper>
    </div>
</section>