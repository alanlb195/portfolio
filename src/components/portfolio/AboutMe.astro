---
// AboutMe Image
import { Image } from "astro:assets";
import aboutMeImage from "/public/assets/cv/profile_image.jpeg";

// Language traductions
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
    id="aboutMe"
    class="about-text-section relative isolate overflow-hidden px-6 py-20 sm:py-28 rounded-3xl"
>
    <div class="flex flex-col justify-center items-center pb-10">
        <h2
            class="text-4xl font-semibold tracking-tight text-slate-900 dark:text-white sm:text-5xl"
        >
            {t("about_me_title")}
        </h2>
        <h3 class="text-lg text-slate-600 dark:text-gray-400 font-medium mt-5">
            {t("about_me_subtitle")}
        </h3>
    </div>

    <div
        class="mx-auto max-w-6xl grid grid-cols-1 lg:grid-cols-2 gap-16 items-center"
    >
        <!-- Imagen -->
        <div class="relative order-first sm:order-none flex justify-center">
            <div
                class="aspect-[3/4] w-72 sm:w-auto overflow-hidden rounded-2xl border
           border-slate-300/50 dark:border-gray-700/60 shadow-md"
            >
                <Image
                    src={aboutMeImage}
                    width={500}
                    height={500}
                    alt="Portrait"
                    class="h-full w-full object-cover"
                />
            </div>
            <div
                class="absolute -bottom-6 right-4 sm:-bottom-6 sm:-right-6 bg-slate-50/90 dark:bg-gray-900/90
           border border-slate-300/40 dark:border-gray-700/60
           rounded-2xl p-4 shadow-sm max-w-xs"
            >
                <p class="text-sm text-slate-700 dark:text-gray-300 italic">
                    “{t("about_me_phrase")}”
                </p>
            </div>
        </div>

        <!-- Contenido -->
        <div class="flex flex-col">
            <p
                class="text-slate-800 dark:text-gray-300 leading-relaxed whitespace-pre-line"
            >
                {t("about_me_content")}
            </p>
        </div>
    </div>
</section>

