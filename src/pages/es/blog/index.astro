---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import BlogCard from "@/components/blog/BlogCard.astro";
import { getCollection } from "astro:content";
import MainLayout from "@/layouts/MainLayout.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const blogPosts = (
    await getCollection("blog", ({ id }) => id.startsWith(`${lang}/`))
).sort((a, b) => a.id.localeCompare(b.id));
---

<MainLayout
    title="Alan's Blog"
    description="My Personal Blog Content"
>
    <section class="min-h-[calc(100vh-8rem)]">
        <div class="container px-6 py-10 mx-auto">
            <div class="text-center">
                <h1
                    class="text-2xl font-semibold text-gray-800 lg:text-3xl dark:text-white"
                >
                    {t("blog.title")}
                </h1>
            </div>

            <div
                class="grid grid-cols-1 gap-8 mt-8 lg:grid-cols-3 md:grid-cols-2"
            >
                {blogPosts.map((post) => <BlogCard post={post} />)}
            </div>
        </div>
    </section>
</MainLayout>
